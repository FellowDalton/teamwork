{
  "name": "@tac8/adws-bun",
  "version": "1.0.0",
  "description": "AI Developer Workflows system - Bun/TypeScript implementation",
  "type": "module",
  "scripts": {
    "build": "bun build --target=bun --outdir=dist src/**/*.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "trigger:teamwork": "bun run src/triggers/adw-trigger-cron-teamwork-tasks.ts",
    "trigger:notion": "bun run src/triggers/adw-trigger-cron-notion-tasks.ts",
    "build-workflow": "bun run src/workflows/adw-build-update-teamwork-task.ts",
    "plan-workflow": "bun run src/workflows/adw-plan-implement-update-teamwork-task.ts",
    "prompt": "bun run src/cli/adw-prompt.ts",
    "slash": "bun run src/cli/adw-slash-command.ts"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
